<Window x:Class="EasySave.ViewUI.MainFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.ViewUI"
        mc:Ignorable="d"
        Title="EasySave"
        Height="475" Width="800"
        MinHeight="475" MinWidth="800">
    <Window.Resources>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6200EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0" MinHeight="475" MinWidth="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <Grid Grid.Column="0" Background="#FFD3C7DF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="JobExecutorButton" Content="Job Executor" HorizontalAlignment="Center" Margin="0,89,0,0" VerticalAlignment="Top" Click="JobExecutorButton_Click" Style="{StaticResource ModernButtonStyle}" Height="34" Width="115"/>
            <Button x:Name="JobEditorButton" Content="Job Editor" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Click="JobEditorButton_Click" Style="{StaticResource ModernButtonStyle}" Height="34" Width="114"/>
            <Button x:Name="SettingsButton" Content="Settings" Margin="0,416,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="SettingsButton_Click" Style="{StaticResource ModernButtonStyle}" Height="34" Width="109"/>
            <Button x:Name="FileDecryptionButton" Content="File Decryption" HorizontalAlignment="Center" Margin="0,191,0,0" VerticalAlignment="Top" Click="DecryptButton_Click" Width="116" Style="{StaticResource ModernButtonStyle}" Height="34"/>


        </Grid>

        
        <ContentControl Name="ContentFrame" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" Width="Auto" Height="Auto" VerticalAlignment="Stretch" Panel.ZIndex="1" Padding="0" Margin="0" MinWidth="665" MinHeight="475"/>
        <Grid/>





    </Grid>
</Window>
