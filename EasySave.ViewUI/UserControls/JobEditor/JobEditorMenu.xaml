<UserControl x:Class="EasySave.ViewUI.UserControls.JobEditor.JobEditorMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EasySave.ViewUI.UserControls.JobEditor"
             mc:Ignorable="d"
             Width="Auto" Height="Auto"
             MinWidth="665" MinHeight="475"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6200EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        <Style x:Key="ModernListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="ModernRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox Name="Job_listbox" ItemsSource="{Binding availableJobs}" Margin="10,10,10,10"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                 Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
                 SelectionChanged="ListBox_SelectionChanged" Style="{StaticResource ModernListBoxStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding name}" Style="{StaticResource ModernTextBlockStyle}"/>
                        <TextBlock Text="{Binding sourcePath}" Style="{StaticResource ModernTextBlockStyle}"/>
                        <TextBlock Text="{Binding targetPath}" Style="{StaticResource ModernTextBlockStyle}"/>
                        <TextBlock Text="{Binding type}" Style="{StaticResource ModernTextBlockStyle}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Name="Create_Jobs_Button" Content="Create" HorizontalAlignment="Center" Height="25" Margin="0,50,0,0" VerticalAlignment="Top" Width="223" Click="Create_Jobs_Button_Click" Grid.Column="1" Grid.Row="0" Style="{StaticResource ModernButtonStyle}"/>
        <Button Name="Update_Jobs_Button" Content="Update" HorizontalAlignment="Center" Height="25" Margin="0,90,0,0" VerticalAlignment="Top" Width="223" Click="Update_Jobs_Button_Click" IsEnabled="False" Grid.Column="1" Grid.Row="0" Style="{StaticResource ModernButtonStyle}"/>
        <Button x:Name="Delete_Jobs_Button" Content="Delete" HorizontalAlignment="Center" Height="25" Margin="0,130,0,0" VerticalAlignment="Top" Width="223" Click="Delete_Jobs_Button_Click" IsEnabled="False" Grid.Column="1" Grid.Row="0" Style="{StaticResource ModernButtonStyle}"/>

        <Grid x:Name="Jobform_grid" Margin="8,204,12,12"  Grid.Column="1" Background="#FFD3C7DF" Grid.RowSpan="2" Visibility="Hidden">
            <TextBox x:Name="JobName_Textbox"
         Height="31"
         Margin="25,31,60,0"
         TextWrapping="Wrap"
         VerticalAlignment="Top"
         Style="{StaticResource ModernTextBoxStyle}"
         RenderTransformOrigin="0.527,-2.051"
         TextChanged="JobName_Textbox_TextChanged"
         PreviewTextInput="JobName_Textbox_PreviewTextInput"/>
            <TextBlock x:Name="errorTextBlock" Foreground="Red" Visibility="Collapsed"/>

            <TextBox x:Name="SourcePath_Textbox" Margin="25,83,60,0" VerticalAlignment="Top"
                     HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" AcceptsReturn="False" TextWrapping="NoWrap" Style="{StaticResource ModernTextBoxStyle}"/>
            <TextBox x:Name="TargetPath_Textbox" Margin="25,135,60,80" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                     HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" AcceptsReturn="False" TextWrapping="NoWrap" Style="{StaticResource ModernTextBoxStyle}"/>
            <StackPanel HorizontalAlignment="Left" Height="33" Margin="26,190,0,0" VerticalAlignment="Top" Width="100">
                <RadioButton x:Name="Fullsave_Radio" Content="Full" Height="18" Width="132" Style="{StaticResource ModernRadioButtonStyle}"/>
                <RadioButton x:Name="Differentialsave_radio" Content="Differential" Height="14" Width="130" Style="{StaticResource ModernRadioButtonStyle}"/>
            </StackPanel>
            <TextBlock Name="JobName_Text" HorizontalAlignment="Left" Height="23" Margin="26,10,0,0" TextWrapping="Wrap" Text="Job name" VerticalAlignment="Top" Width="184" Style="{StaticResource ModernTextBlockStyle}"/>
            <TextBlock Name="SourcePath_Text" HorizontalAlignment="Left" Height="23" Margin="25,61,0,0" TextWrapping="Wrap" Text="Source Path" VerticalAlignment="Top" Width="184" Style="{StaticResource ModernTextBlockStyle}"/>
            <TextBlock Name="TargetPath_Text" HorizontalAlignment="Left" Height="23" Margin="26,112,0,0" TextWrapping="Wrap" Text="Target Path" VerticalAlignment="Top" Width="184" Style="{StaticResource ModernTextBlockStyle}"/>
            <TextBlock Name="SaveType_Text" HorizontalAlignment="Left" Height="23" Margin="25,162,0,0" TextWrapping="Wrap" Text="Save Type" VerticalAlignment="Top" Width="184" Style="{StaticResource ModernTextBlockStyle}"/>
            <Button x:Name="Sourcepath_button" Content="..." HorizontalAlignment="Right" Height="18" Margin="248,84,30,0" VerticalAlignment="Top" Width="21" Click="Sourcepath_button_Click" Style="{StaticResource ModernButtonStyle}"/>
            <Button x:Name="Targetpath_button" Content="..." HorizontalAlignment="Right" Height="18" Margin="248,135,30,0" VerticalAlignment="Top" Width="21" Click="Targetpath_button_Click" Style="{StaticResource ModernButtonStyle}"/>
            <Button x:Name="OkJob_Button" Content="OK" HorizontalAlignment="Right" Height="21" Margin="248,202,10,0" VerticalAlignment="Top" Width="56" Click="OkJob_Button_Click" Style="{StaticResource ModernButtonStyle}"/>
        </Grid>
    </Grid>
</UserControl>
