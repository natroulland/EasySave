<Window x:Class="DistantClientEasySave.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="Auto" Height="Auto"
             MinWidth="665" MinHeight="475"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch" d:DesignWidth="723.191">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="44*" MinWidth="332.5"/>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="111*" MinWidth="332.5"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox Name="Listbox_Test" ItemsSource="{Binding AvailableJobs}" Margin="10,20,10,10"
             Height="Auto" Width="Auto" 
             Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <CheckBox Content="{Binding Job.name}" IsChecked="{Binding isChecked}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox ItemsSource="{Binding AvailableJobs}" Margin="10,20,10,10"
             Height="Auto" Width="Auto"
             Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding isChecked}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="{Binding Job.name}" />
                        <TextBlock Text="{Binding Job.sourcePath}" />
                        <TextBlock Text="{Binding Job.targetPath}" />
                        <TextBlock Text="{Binding Job.type}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock x:Name="Available_jobs_TextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,1,0,0" TextWrapping="Wrap"
               Grid.Column="0" Grid.Row="0">
        <Run Text="Available jobs"/><Run Language="fr-fr" Text=" :"/>
        </TextBlock>

        <TextBlock x:Name="Selected_jobs_TextBlock" Margin="18,1,0,0" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top"
               Grid.Column="2" Grid.Row="0">
        <Run Text="Selected jobs"/><Run Language="fr-fr" Text=" details"/><Run Text=" :"/>
        </TextBlock>

        <DataGrid x:Name="DataGrid_JobState" ItemsSource="{Binding jobStateList}"
            Width="Auto" Height="Auto" MinHeight="176"
            Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="3"
            Margin="20,0,20,50" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Job name" Binding="{Binding Name}" />
                <DataGridTemplateColumn Header="Progression">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Value="{Binding ProgressBar}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="State" Binding="{Binding State}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="executejob_button" Content="Execute job(s)"
            Margin="0,0,20,10" VerticalAlignment="Bottom" HorizontalAlignment="Right"
            Grid.Column="2" Grid.Row="3"
            Height="30" Width="120" Click="executejob_button_Click"/>

        <Button x:Name="stopjob_button" Content="Stop job"
    Margin="0,0,166,10" VerticalAlignment="Bottom" HorizontalAlignment="Right"
    Grid.Column="2" Grid.Row="3"
    Height="30" Width="70" Click="stopjob_button_Click"/>

        <Button x:Name="pause_button" Content="Pause"
        Margin="0,0,29,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="3"
        Height="30" Width="64" Click="pause_button_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="resume_button_Copy" Content="Resume"
        Margin="0,0,267,10" VerticalAlignment="Bottom" HorizontalAlignment="Right"
        Grid.Column="2" Grid.Row="3"
        Height="30" Width="65" Click="resume_button_Click"/>
    </Grid>
</Window>